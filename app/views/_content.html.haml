#content.valign-wrapper
  #screen_content
    - begin
      = render :template => 'homepage/dashboard'
    - rescue

#confirm-modal.info-modal.modal
  .modal-content
    %h5.modal-title 確認
    #confirm-content.modal-message 本当によろしいですか？
  .modal-footer
    #confirmed-btn.btn.right.modal-close はい
    .modal-close.btn-flat.waves-effect いいえ

#error-modal.info-modal.modal
  .modal-content
    %h5.modal-title Error
    #error-content.modal-message Something happened.
  .modal-footer
    .modal-close.btn.right OK

#load-modal.info-modal.modal{style: "width: 150px"}
  .modal-content
    .modal-message Loading...

:javascript
  $(function(){
    $('.info-modal').modal({
      ready: function(modal, trigger) {
        modal.css('z-index', '9999');
      }
    });

    $('#confirm-modal').modal({
      complete: function(modal, trigger) {
        $('#confirm-content').text('本当によろしいですか？');
      }
    });
  });
