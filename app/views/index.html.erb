<%- (grids = controller.screen.grids).each_with_index do |grid, index| %>
  <%- if grid.fill_window? %>
    <%= grid.render(controller.current_user) if index == 0 -%>
    <%- if grids.size > 1 %>
      <%= javascript_tag do -%>
          alert('Fill window grid must be stand alone!')
      <% end -%>
      <% Rails.logger.warn "WARNING: Fill window grid must be stand alone!" %>
    <% end -%>  
    <%- break %>
  <% else %>
    <%= grid.render(controller.current_user) %>
  <% end -%>
<% end -%>